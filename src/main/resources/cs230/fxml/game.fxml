<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootAnchorPane" prefHeight="1080" prefWidth="1920" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs230.viewController.GameController">

   <children>
      <Canvas fx:id="gameCanvas" height="960.0" layoutX="10.0" layoutY="110.0" width="1900.0" />
      <Label fx:id="timeRemaining" layoutX="796.0" layoutY="34.0" prefHeight="35.0" prefWidth="253.0" style="-fx-font-size: 24;" text="%timeRemaining" AnchorPane.topAnchor="61.0">
         <font>
            <Font size="16.0" />
         </font></Label>
      <Label fx:id="score" layoutX="1785.0" layoutY="61.0" prefHeight="35.0" prefWidth="122.0" style="-fx-font-size: 24;" text="%score" AnchorPane.rightAnchor="13.0" AnchorPane.topAnchor="61.0" />
      <Label fx:id="level" layoutX="14.0" layoutY="61.0" prefHeight="35.0" prefWidth="106.0" style="-fx-font-size: 24;" text="%level" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="61.0">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ImageView fx:id="settings" fitHeight="52.0" fitWidth="40.0" layoutX="1868.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="9.0">
         <image>
            <Image url="@../images/settings.png" />
         </image>
      </ImageView>
      <ImageView fx:id="pausePlay" fitHeight="52.0" fitWidth="40.0" layoutX="1822.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="58.0" AnchorPane.topAnchor="9.0">
         <image>
            <Image url="@../images/pause.png" />
         </image>
      </ImageView>
      <ImageView fx:id="restart" fitHeight="52.0" fitWidth="40.0" layoutX="1776.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="104.0" AnchorPane.topAnchor="9.0">
         <image>
            <Image url="@../images/restart.png" />
         </image>
      </ImageView>
      <Button fx:id="exit" cancelButton="true" layoutX="14.0" layoutY="12.0" minWidth="170.0" mnemonicParsing="true" prefHeight="35.0" prefWidth="122.0" text="%exit" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="12.0" />
      <Button fx:id="main" cancelButton="true" layoutX="194.0" layoutY="12.0" minWidth="170.0" mnemonicParsing="true" prefHeight="35.0" prefWidth="122.0" text="%mainMenu" AnchorPane.leftAnchor="194.0" AnchorPane.topAnchor="12.0" />
      <ImageView fx:id="themePane" fitHeight="960.0" fitWidth="1900.0" layoutX="10.0" layoutY="110.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fx:id="bigPlay" disable="true" fitHeight="960.0" fitWidth="1900.0" layoutX="10.0" layoutY="110.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../images/big_play.png" />
         </image>
      </ImageView>
   </children>

    <stylesheets>
        <URL value="@../css/application.css" />
        <URL value="@../css/game.css" />
    </stylesheets>
</AnchorPane>
